<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display All Employees</title>
    
    <!-- Bootstrap 5.1 CSS -->
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
    />

    <!-- Bootstrap 5.1 JS Bundle -->
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
    ></script>

    <style>
    /* Hand on hover */
    .clickable-row:hover {
      cursor: pointer;
      background-color: #f5f5f5;
    }
    </style>

</head>
<body>
    <!-- Navigation bar -->
    {{> navbar}}

    <h2>Click ROW to edit Employee ***</h2>

    <!-- Table of employees -->
    <div class="container mt-4">
    <table class="table">
    <thead>
        <tr>
            <th scope="col">Job ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Birthdate</th>
            <th scope="col">Salary</th>
            <th scope="col">Commission %</th>
            <th scope="col">Manager ID</th>
            <th scope="col">Dept. ID</th>
        </tr>
    </thead>
    <tbody>
        <!-- Rows -->
    </tbody>
</table>
    </div>


    <!-- Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const tableBody = document.querySelector('table.table tbody');
        const additionalData = [
            { id: 102, name: "Jane Smith", email: "jane_smith@protonmail.com", phone: "648-230-1593", hireDate: "Jan-15-1998", salary: "$25,500", commission: "15%", managerId: 10, departmentId: 48 },
            { id: 103, name: "Alex Johnson", email: "alex_j@protonmail.com", phone: "649-331-1594", hireDate: "Mar-22-2000", salary: "$30,000", commission: "18%", managerId: 14, departmentId: 50 },
            { id: 104, name: "Emily Davis", email: "emily_d@protonmail.com", phone: "650-432-1595", hireDate: "Jul-08-1996", salary: "$28,700", commission: "12%", managerId: 16, departmentId: 46 },
            { id: 105, name: "Michael Brown", email: "michael_b@protonmail.com", phone: "651-533-1596", hireDate: "Sep-17-1994", salary: "$32,200", commission: "20%", managerId: 18, departmentId: 54 }
        ];

        additionalData.forEach(data => {
            const row = `<tr class="clickable-row" data-href="/displayAllEmployees/editEmployee">
                <th scope="row">${data.id}</th>
                <td>${data.name}</td>
                <td>${data.email}</td>
                <td>${data.phone}</td>
                <td>${data.hireDate}</td>
                <td>${data.salary}</td>
                <td>${data.commission}</td>
                <td>${data.managerId}</td>
                <td>${data.departmentId}</td>
            </tr>`;
            tableBody.innerHTML += row;
        });

        // Click event listener for row
        document.querySelectorAll('.clickable-row').forEach(row => {
            row.addEventListener('click', function() {
                const href = this.getAttribute('data-href'); 
                window.location.href = href; 
            });
        });
    });

    </script>

</body>
</html>